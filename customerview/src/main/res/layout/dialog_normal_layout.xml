<?xml version="1.0" encoding="utf-8"?>
<com.bear.customerview.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <com.bear.customerview.autolayout.AutoRelativeLayout
        android:id="@+id/rl_balance_pay_error_view"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:background="@drawable/custom_dialog_bg_color"
        android:visibility="visible">
        <com.bear.customerview.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="340px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:textColor="@color/normal_text_color"
                android:textSize="50px" />
            <com.bear.customerview.autolayout.AutoLinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/title"
                android:layout_marginTop="15px"
                android:gravity="center">
                <TextView
                    android:id="@+id/message"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normal_text_color"
                    android:textSize="50px" />
            </com.bear.customerview.autolayout.AutoLinearLayout>
        </com.bear.customerview.autolayout.AutoRelativeLayout>
        <com.bear.customerview.autolayout.AutoLinearLayout
            android:id="@+id/btn_balance_pay_error_button"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/negativeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_dialog_left_button_color"
                android:text="取消"
                android:textColor="@drawable/dialog_button_color_selector"
                android:textSize="46px" />

            <View
                android:id="@+id/view_dialog_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_color"></View>

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_dialog_right_button_color"
                android:text="确认"
                android:textColor="@drawable/dialog_button_color_selector"
                android:textSize="46px" />

        </com.bear.customerview.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@id/btn_balance_pay_error_button"
            android:background="@color/line_color"></View>
    </com.bear.customerview.autolayout.AutoRelativeLayout>


</com.bear.customerview.autolayout.AutoRelativeLayout>